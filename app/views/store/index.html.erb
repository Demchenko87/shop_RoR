<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Ваш Каталог</h1>
<% cache ['store', Product.latest] do %>
<% @products.each do |product|%>
<% cache ['entry', product] do %>
	<div class="entry">
	
		
		<%= link_to image_tag(product.image_url, width: '155'), image_url(product.image_url), :rel => 'fancybox' %>

	
		<h3><%= product.title %></h3>
		<div class="desc"><%= sanitize(product.description) %></div>
			<div class="price_line">
				<span class="price"><%= number_to_currency(product.price) %></span>	
				<%= button_to 'Заказать', line_items_path(product_id: product) %>
			</div>

	</div>
	<% end %>
<% end %>
<% end %>

