<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
 
<h2>Ваша корзина</h2>
<ul>    
  <% @cart.line_items.each do |item| %>
      <li><%= item.quantity%> &times;<%= item.product.title %></li>
  <% end %>
</ul>

<%= button_to 'Очистить корзину', @cart, method: :delete, data: {confirm: 'Вы уверены?'}%>
<%= link_to 'Редактировать', edit_cart_path(@cart) %> |
<%= link_to 'Назад', carts_path %>
